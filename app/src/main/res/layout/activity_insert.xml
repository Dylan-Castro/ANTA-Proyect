<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6ECE9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="216dp"
                android:layout_height="85dp"
                android:text="Inserte un nuevo producto"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="126dp"
                android:layout_height="110dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="34dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="406dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="#A7D8D3"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:cardCornerRadius="4dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp">

                <TextView
                    android:id="@+id/Nombre"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:text="Nombre:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Codigo"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="100dp"
                    android:text="Codigo:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Marca"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="100dp"
                    android:text="Marca:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Categoria"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginEnd="150dp"
                    android:text="Categoria:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Costo"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginEnd="200dp"
                    android:text="Costo:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PrecioVenta"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="210dp"
                    android:layout_marginEnd="250dp"
                    android:text="Precio:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Cantidad"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginEnd="300dp"
                    android:text="Cantidad:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/CantidadAlerta"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginEnd="350dp"
                    android:text="Cantidad de alerta:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/nombre"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="80dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/codigo"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="80dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/marca"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/categoria"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginEnd="150dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/costo"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginEnd="200dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/precio"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="210dp"
                    android:layout_marginEnd="250dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cantidad"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginEnd="300dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cantidadAlerta"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginEnd="350dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/guardar"
                android:layout_width="109dp"
                android:layout_height="52dp"
                android:layout_marginStart="151dp"
                android:layout_marginTop="106dp"
                android:layout_marginEnd="151dp"
                android:background="#D33C6AC7"
                android:text="Guardar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>